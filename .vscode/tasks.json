{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch services",
            "command": "docker-compose",
            "args": [
                "up", "-d",
                "prometheus", "cockroachdb",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            }
        },
        {
            "label": "Migrate up",
            "command": "go",
            "args": [
                "run", "main.go",
                "migrate", "up",
                "--database.address", "root@localhost:26257"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "Launch services",
            ],
        },
        {
            "label": "Build image",
            "command": "docker",
            "args": [
                "build", "./",
                "--file", "build/Dockerfile.local",
                "--build-arg", "version=0.0.0",
                "-t", "heroiclabs/nakama:develop",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ]
  }