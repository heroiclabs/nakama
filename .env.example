# PostgreSQL
POSTGRES_USER=nakama
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Nakama Admin Console
ADMIN_USER=admin
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Nakama Socket Server Key (used by game clients)
SOCKET_SERVER_KEY=CHANGE_ME_RANDOM_STRING_HERE

# Nakama Runtime HTTP Key (for unauthenticated RPC calls)
RUNTIME_HTTP_KEY=CHANGE_ME_HTTP_KEY_HERE

# Domain (for SSL certificate)
DOMAIN=elderwood.example.com
EMAIL=admin@example.com

# SMTP Configuration (for email verification)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=Elderwood

# Application URL (for email links)
APP_BASE_URL=https://admin.elderwood.example.com

# Discord OAuth2 Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=https://admin.elderwood.example.com/discord-callback
